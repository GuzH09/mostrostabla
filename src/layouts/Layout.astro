---
import '../styles/global.css';
import SEO from '../components/layouts/SEO.astro';

interface Props {
  title: string;
  description: string;
  lang: string;
}

const { title, description, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <SEO description={description} title={title} lang={lang} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    scroll-behavior: smooth;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
